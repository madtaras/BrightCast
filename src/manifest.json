{
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "manifest_version": 2,
  "name": "BrightCast - VK Music Player",
  "short_name": "BrightCast",
  "version": "0.8.0",
  "version_name": "0.8.0 beta",
  "default_locale": "en",

  "commands":{

    "play-pause":{
      "suggested_key": {
        "default": "Ctrl+Shift+7"
      },
      "description": "Play/Pause",
      "global": true
    },

    "skip-prev":{
      "suggested_key": {
        "default": "Ctrl+Shift+6"
      },
      "description": "Skip prev",
      "global": true
    },

    "skip-nex":{
      "suggested_key": {
        "default": "Ctrl+Shift+8"
      },
      "description": "Skip nex",
      "global": true
    },

    "mute":{
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "Mute",
      "global": true
    }

  },

  "description": "__MSG_shortDescr__",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "author": "Taras Mazurkevych <mad.taras@gmail.com>",

  "minimum_chrome_version": "46",
  "offline_enabled": false,
  "permissions": [
    "webview",
    "storage",
    "http://*.vk.com/",
    "https://*.vk.com/",
    "https://*.vk-cdn.net/*",
    "https://*.vk.me/*",
    "system.network",
    {
      "socket": [
        "tcp-connect",
        "tcp-listen"
      ]
    }
  ]
}
